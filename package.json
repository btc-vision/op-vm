{
    "name": "@btc-vision/op-vm",
    "description": "OP-VM executable for Bitcoin Smart Contracts",
    "version": "1.0.0-beta.1",
    "license": "MIT",
    "main": "index.js",
    "types": "index.d.ts",
    "typings": "index.d.ts",
    "type": "module",
    "homepage": "https://opnet.org/",
    "keywords": [
        "opnet",
        "bitcoin",
        "btc",
        "bitcoin smart contracts"
    ],
    "repository": {
        "type": "git",
        "url": "git://github.com/btc-vision/op-vm.git"
    },
    "engines": {
        "node": ">= 22"
    },
    "files": [
        "index.js",
        "index.d.ts",
        "index.node",
        "Cargo.toml",
        "Cargo.lock",
        "src/",
        "build.rs",
        "prebuilds/",
        "install.mjs"
    ],
    "scripts": {
        "test": "cargo test tests",
        "postinstall": "node install.mjs",
        "cargo-build": "cargo build --message-format=json-render-diagnostics > cargo.log",
        "cross-build": "cross build --message-format=json-render-diagnostics > cross.log",
        "postcargo-build": "neon dist < cargo.log",
        "postcross-build": "neon dist -m /target < cross.log",
        "debug": "npm run cargo-build --",
        "build": "npm run cargo-build -- --release",
        "cross": "npm run cross-build -- --release",
        "prepublishOnly": "echo 'Skipping build on publish'",
        "coverage": "cargo llvm-cov clean --workspace && cargo llvm-cov --workspace --open"
    },
    "devDependencies": {
        "@types/node": "^25.2.3",
        "cargo-cp-artifact": "^0.1.9",
        "mocha": "^11.7.5"
    },
    "dependencies": {
        "@neon-rs/cli": "^0.1.82",
        "prettier": "^3.8.1"
    }
}
